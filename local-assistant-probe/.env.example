# Local Assistant Probe Configuration
# Copy this file to .env and update with your values

# API host (default: localhost)
PROBE_HOST=localhost

# API port (default: 3000)
PROBE_PORT=3000

# API key (required)
PROBE_API_KEY=sk-your-api-key-here

# Model hint to search for (default: llama3)
PROBE_MODEL_HINT=llama3

# Configuration title (default: Local Assistant)
PROBE_TITLE=Local Assistant

# Model name for output (default: LLama3)
PROBE_MODEL_NAME=LLama3

# Request timeout in seconds (default: 3.0)
PROBE_TIMEOUT=3.0

# Enable debug output (default: false)
PROBE_DEBUG=false
